<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>
        <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 blog-list">
    {{#if blogs.length}}
      <h3>Current blogs:</h3>
      {{!-- Add this line to display the value of 'editing' --}}
      

{{#each blogs}}
  <div id="app">
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{id}}">{{id}}</a></h4>
      </div>
      <script>
        console.log("Editing state:", {{editing_value}});
        console.log("ID:", {{id}});
      </script>
      {{#if (isEqual editing_value id)}}
        <form>
          <label for="title">Title:</label>
          <input type="text" id="title" value="{{title}}">
          
          <label for="content">Content:</label>
          <textarea id="content">{{content}}</textarea>
          
          <button id="{{id}}" class="post-title-save" type="button" data-save-id="{{id}}">Save Changes</button>
        </form>
      {{else}}
        <h1>{{title}}</h1>
        <p>{{content}}</p>
        <button id="{{id}}" class="post-title-edit" data-edit-id="{{id}}">EDIT</button>
      {{/if}}
      <button class="btn btn-sm btn-danger" data-del-id="{{id}}">DELETE</button>
    </div>
  </div>
  <br>
  <br>
{{/each}}


    {{else}}
      <p>No blogs available.</p>
    {{/if}}
  </div>
</div>

<script src="./js/dashboard.js"></script>
