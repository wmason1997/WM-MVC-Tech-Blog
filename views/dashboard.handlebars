<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>
        <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 blog-list">
    {{#if blogs.length}}
      <h3>Current blogs:</h3>

      {{#each blogs}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/blog/{{id}}">{{title}}</a></h4>
          </div>
          <div class="col-md-4">
            <p>Title: {{title}}</p>
            <p>Content: {{content}}</p>
            <button class="btn btn-sm btn-blog-edit" data-edit-id="{{id}}">EDIT</button> {{!-- Need to make an event listener for this and a put route on the blog posts --}}
            <button class="btn btn-sm btn-danger" data-del-id="{{id}}">DELETE</button>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>No blogs available.</p>
    {{/if}}
  </div>
</div>

<script src="./js/dashboard.js"></script>
